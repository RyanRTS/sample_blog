<% provide(:title, @category.name) %>
<h1><%= @category.name %></h1>
<% if current_user == @category.user || current_user.admin? %>
  <div class="center">
    <%= link_to "Edit category", edit_category_path, {:remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-category', 'class' => 'btn btn-primary' } %>
  </div>
<% end %>
<div class="row">
  <% if @category.posts.any? %>
    <h3>Posts (<%= @category.posts.count %>)</h3>
    <ol class="microposts">
      <%= render @posts %>
    </ol>
  <% else %>
  no posts
  <% end %>
  <div id="modal-category" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
</div>