<% provide(:title, 'Post') %>
<h3><%= @post.title %></h3>
<span class="user"><%= link_to @post.user.name, @post.user %></span>
<br><br>
<span class="content">
  <%= @post.content %>
</span>
<br>
<% if current_user == @post.user || current_user.admin? %>
<span class="timestamp">
  <%= link_to "edit", edit_post_path %>
  <%= link_to " | delete", @post, method: :delete, data: { confirm: "You sure?" }%>
</span>
<% end %>