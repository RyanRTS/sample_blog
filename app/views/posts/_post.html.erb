<li id="post-<%= post.id %>">
  <span class="title"><%= link_to post.title, post, class: 'text-primary h5' %></span>
  <span class="pull-right"><%= link_to post.category.name, post.category, class: 'text-info' %></span>
  <span class="content">
    <%= post.content %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago
    <span class="pull-right"><%= link_to post.user.name, post.user %></span>
  </span>
</li>