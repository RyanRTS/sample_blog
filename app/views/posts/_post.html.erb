<li id="post-<%= post.id %>">
  <span class="content"><%= link_to post.title, post %></span>
  <span class="pull-right"><%= link_to "category", '#' %></span>
  <span class="content">
    <%= post.content %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago
    <span class="pull-right"><%= link_to post.user.name, post.user %></span>
  </span>
</li>