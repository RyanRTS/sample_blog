<% provide(:title, @user.name) %> 
<div class="row">
  <aside class="col-md-2">
    <section class="user_info">
    <h1>
      <%= @user.name %>
    </h1>
    <%= link_to "edit profile", edit_user_path(@user) if current_user?(@user)%>
    </section>
  </aside>
  <div class="col-md-10">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="microposts">
        <%= render @posts %>
      </ol>
    <% end %>
  </div>
</div>